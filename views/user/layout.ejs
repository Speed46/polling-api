<!-- basic layout for navbar, flash messages and adding all the required css and js files  -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Including bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/signInUp.css">
    <link rel="stylesheet" href="/css/home.css">
    <script src="https://kit.fontawesome.com/f47311485a.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <%- style %>
</head>
<body>
    <nav class="navbar bg-dark" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">POLLING SYSTEM</a>
            <% if(locals.user) { %>
                <form action="<%= form_action %>">
                    <button class="btn btn-outline-success" type="submit"><%= btn_text %></button>
            <% }else { %>
                <form action="/users/sign-in">
                    <button class="btn btn-outline-success" type="submit"> Sign In </button>
                <% } %>

            </form>
        </div>
    </nav>

    <%- body%>
    
    <div id="footer-contact" class="bg-dark">
        <p class="text-underline">Made By KOUSIK</p>
        <ul class="horizontal-list text-center social-icons">
            <li>
                <a href="https://www.linkedin.com/in/kousikb1/">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </li>
            <li>
                <a href="mailto:bollapragadaousik46@gmail.com">
                    <i class="fa fa-envelope-o"></i>
                </a>
            </li>
            <li>
                <a href="https://www.instagram.com/">
                    <i class="fab fa-instagram"></i>
                </a>
            </li>
        </ul>
    </div>
    <%- script%>
    <!-- bootstrap script file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
    <!-- using 'Noty' to use stylish flash messages -->
    <script>
        <% if(flash.success && flash.success.length>0) { %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>

        <% if(flash.error && flash.error.length>0) { %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>
    </script>
</body>
</html>